{
  "kind": "collectionType",
  "collectionName": "course_applications",
  "info": {
    "singularName": "course-application",
    "pluralName": "course-applications",
    "displayName": "CourseApplication",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "city": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "message": {
      "type": "text"
    },
    "hasPaid": {
      "type": "boolean"
    },
    "approvalStatus": {
      "type": "enumeration",
      "enum": [
        "approved",
        "pending",
        "rejected"
      ],
      "default": "pending"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "applications"
    },
    "notes": {
      "type": "text"
    },
    "paymentExplanation": {
      "type": "string"
    },
    "profile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::profile.profile"
    },
    "installmentCount": {
      "type": "integer"
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "courseApplication"
    },
    "installmentStartAfter": {
      "type": "date"
    },
    "installmentInterval": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "submittedAssignmentFiles": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "lastUpdateDate": {
      "type": "datetime"
    }
  }
}
