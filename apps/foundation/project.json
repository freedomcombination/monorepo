{
  "name": "foundation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/foundation",
  "projectType": "application",
  "targets": {
    "tsc": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --noEmit -p apps/foundation/tsconfig.json"
          }
        ]
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/foundation",
        "outputPath": "dist/apps/foundation",
        "assets": [
          {
            "input": "public/locales",
            "glob": "**/*.json",
            "output": "locales"
          }
        ]
      },
      "configurations": {
        "development": {
          "outputPath": "apps/foundation"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "foundation:build",
        "dev": true,
        "assets": [
          {
            "input": "public/locales",
            "glob": "**/*.json",
            "output": "locales"
          }
        ]
      },
      "configurations": {
        "development": {
          "buildTarget": "foundation:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "foundation:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "foundation:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/foundation/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/foundation/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
